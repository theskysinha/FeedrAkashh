<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/madang"
    tools:context=".Donator_2">

    <TextView
        android:id="@+id/Header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome To"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/Header_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FEEDR"
        android:layout_below="@+id/Header_1"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_marginTop="-10dp"
        android:textColor="@color/login_green"
        android:fontFamily="@font/lovelo_black"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="136dp"
        android:layout_height="168dp"
        android:src="@drawable/logo"
        android:layout_below="@+id/Header_2"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-30dp"/>


    <Button
        android:id="@+id/donatef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Would you like to donate some food today?"
        android:textSize="15dp" />

    <Button
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donatef"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:text="View Statistics for your Organisation"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/donatef"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="OR"
        android:textColor="@color/black"
        android:textSize="50dp"/>


</RelativeLayout>