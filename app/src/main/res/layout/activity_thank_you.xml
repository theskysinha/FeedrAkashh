<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/madang">

    <TextView
        android:id="@+id/thankyou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:fontFamily="@font/lovelo_black"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:outlineAmbientShadowColor="@color/black"
        android:textSize="50dp"
        ></TextView>

    <Button
        android:id="@+id/donatef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thankyou"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Would you like to donate some food today?"
        android:textSize="15dp" />

    <Button
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donatef"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:text="View Statistics for your Organisation"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/donatef"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="OR"
        android:textColor="@color/black"
        android:textSize="50dp"/>

</RelativeLayout>
