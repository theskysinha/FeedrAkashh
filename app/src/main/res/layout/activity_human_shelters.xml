<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/madang"
        app:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="10dp"
            android:background="@color/black_shade_3"
            android:padding="4dp">

            <TextView
                android:id="@+id/shelterName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shelter1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelterName1"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:padding="3dp"
                android:text="Food Shelter A"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelter1"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:padding="3dp"
                android:text="Location: RK Puram"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/donateA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"

                    android:layout_weight="1"
                    android:text="Donate Food"
                    android:textAllCaps="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="210dp"
            android:layout_below = "@id/card3"
            android:background="@color/black_shade_3"
            android:padding="4dp">

            <TextView
                android:id="@+id/shelterName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shelter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelterName2"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Food Shelter B"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelter2"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Location: Janakpuri"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location2"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/donateB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:text="Donate Food"
                    android:textAllCaps="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="410dp"
            android:layout_below = "@id/card2"
            android:background="@color/black_shade_3"
            android:padding="4dp">

            <TextView
                android:id="@+id/shelterName3"
