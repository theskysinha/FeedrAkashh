            <TextView
                android:id="@+id/shelter3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelterName3"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Food Shelter C"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/location3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelter3"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Location: Anand Vihar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location3"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/donateC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:text="Donate Food"
                    android:textAllCaps="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card5"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="810dp"
            android:layout_below="@id/card4"
            android:background="@color/black_shade_3"
            android:padding="4dp">

            <TextView
                android:id="@+id/shelterName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shelter5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelterName5"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Food Shelter E"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/location5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shelter5"
                android:layout_margin="4dp"
                android:padding="3dp"
                android:text="Location: India Gate"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location5"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/donateE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:text="Donate Food"
                    android:textAllCaps="false" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="610dp"
            android:layout_below="@id/card3"
            android:background="@color/black_shade_3"
            android:padding="4dp">

            <TextView
                android:id="@+id/shelterName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shelter4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
